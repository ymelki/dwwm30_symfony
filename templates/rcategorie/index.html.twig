{% extends 'base.html.twig' %}

{% block title %}Rcategorie index{% endblock %}

{% block body %}
    <h1>Rcategorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rcategorie in rcategories %}
            <tr>
                <td>{{ rcategorie.id }}</td>
                <td>{{ rcategorie.titre }}</td>
                <td>{{ rcategorie.description }}</td>
                <td>
                    <a href="{{ path('app_rcategorie_show', {'id': rcategorie.id}) }}">show</a>
                    <a href="{{ path('app_rcategorie_edit', {'id': rcategorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rcategorie_new') }}">Create new</a>
{% endblock %}
